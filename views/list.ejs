<%- include("header") -%>
<!--
  currentDay : string,
  itemLists : array
-->
<div>
  <h1>To Do List</h1>
  <h2><%=currentDay%></h2>
  <% itemLists.forEach((item)=>{ %>
    <form action="/delete" method="post">
      <div>
        <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
        <span><%= item.todo %></span>
      </div>
    </form>
  <% })%>
  <form action="/" method="post">
    <input type="text" name="newItem" placeholder="write what you have to do" autocomplete="off">
    <button type="submit">submit</button>
  </form>
</div>
</body>
</html>